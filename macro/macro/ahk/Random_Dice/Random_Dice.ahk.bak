SearchAndClick(image, delay)
{
	if (Search_img(image,appPlayer,VX,VY))
	{
		RanClickOkButton(VX, VY)
		sleep, %delay%
	}
}

RanClick(x1, x2, y1, y2)
{
	Random, randx, %x1%, %x2%
	Random, randy, %y1%, %y2%
	ControlClick, x%randx% y%randy%, LDPlayer
	return
}

RanClickOkButton(VX, VY)
{
	Random, randx, -5, 5
	Random, randy, -5, 5
	VX += randx
	VY += randy
	ControlClick, x%VX% y%VY%, LDPlayer
	return
}

